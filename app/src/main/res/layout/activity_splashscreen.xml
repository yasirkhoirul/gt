<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SplashScreenActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="G R O W T H   T R A C K"
        android:textAlignment="center"
        android:textColor="@color/primer"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/iv_splashscreen"
        app:layout_constraintTop_toBottomOf="@id/iv_splashscreen"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/iv_splashscreen"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:src="@drawable/logoawal"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>